<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/button_background_drawable</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="DatePickerStyle" parent="android:Widget.DatePicker">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:panelColorBackground">@color/colorWhite</item>
        <item name="android:headerBackground">@drawable/wooden_background</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>

</resources>
