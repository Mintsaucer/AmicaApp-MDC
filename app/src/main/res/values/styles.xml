<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLightTransparentGray</item>
        <item name="colorPrimaryDark">@color/colorLightTransparentGray</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/button_background_drawable</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="DatePickerStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:headerBackground">@color/colorWhite</item>
    </style>

    <style name="datepicker" parent="@android:style/Widget.Material.Light.DatePicker" tools:targetApi="lollipop">
        <item name="android:yearListSelectorColor">@color/colorWhite</item>
        <item name="android:headerBackground">@color/colorLightTransparentGray</item>
        <item name="android:background">@color/colorLightTransparentBlue</item>

    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

</resources>
